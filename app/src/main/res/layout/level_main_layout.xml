<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/levelMain">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick A Level"
        android:id="@+id/PickLevel"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_gravity="center"
        android:layout_marginTop="37dp" />


    <LinearLayout
        android:id="@+id/ly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:text="Level 1"
            android:textSize="26sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/stop"
            android:textColor="#FFFFFF"
            android:id="@+id/level1" />

        <Button
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:text="Level 2"
            android:textSize="26sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/stride"
            android:textColor="#FFFFFF"
            android:id="@+id/level2"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:text="Level 3"
            android:textSize="26sp"
            android:background="@drawable/recover"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:textColor="#FFFFFF"
            android:id="@+id/level3" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">



        <Button
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:text="Level 4"
            android:textSize="26sp"
            android:background="@drawable/turn"
            android:textColor="#FFFFFF"
            android:id="@+id/level4"
            android:layout_marginLeft="30dp" />


        <Button
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:text="Level 5"
            android:textSize="26sp"
            android:background="@drawable/crossover"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="50dp"
            android:id="@+id/level5" />

        <Button
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:text="Level 6"
            android:textSize="26sp"
            android:background="@drawable/backward"
            android:textColor="#FFFFFF"
            android:id="@+id/level6"
            android:layout_marginLeft="50dp" />
    </LinearLayout>
</LinearLayout>